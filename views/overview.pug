extends base

block content
    main.main
        .card-container
            each book in books
                .card
                    .card__header
                        .card__picture
                        img.card__picture-img(src='img/bookReader.jpg', alt=`${book.title}`)
                        h3.heading-tertirary
                            span= book.title

                    .card__details
                        ol
                            li
                                h5.card__sub-heading Author: #{book.author}
                            li
                                h6.card__sub-heading Publication Year: #{book.year}
                            li
                                h6.card__sub-heading Number of Ratings: #{book.numRatings}
                            li
                                h6.card__sub-heading Ratings Average: #{book.ratingsAverage}

                    .card__footer
                        a.btn(href='#') Details